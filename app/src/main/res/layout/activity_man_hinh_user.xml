<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.thienphan.quantrivien.ManHinhUser">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnTroVeUser"
            style="@style/AppTheme"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="left"
            android:background="@drawable/button_gray"
            android:drawableLeft="@android:drawable/ic_menu_revert"
            android:gravity="left|center"
            android:text="Trở về"
            android:textColor="@android:color/white"
            android:textStyle="bold" />
        <LinearLayout
            android:layout_width="428dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1.52">

            <Button
                android:id="@+id/btnThayDoiMaDK"
                style="@style/AppTheme"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="right"
                android:background="@drawable/button_gray"
                android:drawableLeft="@android:drawable/ic_menu_set_as"
                android:gravity="left|center"
                android:text="Thay đổi mã đăng ký "
                android:textColor="@android:color/white"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:text="Danh sách nhân viên"
        android:textColor="@android:color/black"
        android:textSize="30sp"
        android:textStyle="bold" />

    <ListView
        android:id="@+id/lvDanhSachNhanVien"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
